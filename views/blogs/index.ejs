<!DOCTYPE html>
<html lang="en">

    <!-- passing the paritial file to the html file -->
    <%- include('../partials/head.ejs') %>

    <link rel="stylesheet" href='../public/style.css' />

<body>

      <!-- write ejs tags here -->
        
         <!-- passing the paritial file to the html file -->

        <%- include('../partials/nav.ejs') %>


           <div class="blogs content">
            <h2> All Blogs </h2>
           </div>
           
           <!-- Write ejs tags and passing the blogs variable to the html file -->
           
           <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
            <a class="single" href="/blogs/ <%= blog._id %>">
            <h3 class="title"> <%=blog.title %>  </h3>
            <p class="snippet"> <%=blog.snippet %> </p>
            </a> 
            <% }) %>
            <% } else { %>
            <p> No blogs to display here....</p>

            <% } %>



     <!-- passing the paritial file to the html file -->
      <%- include('../partials/footer.ejs') %>


</body>
</html>